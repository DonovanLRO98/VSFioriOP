<mvc:View controllerName="dev.sapui5.controller.SAPUI5Practice"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App>
        <pages>
            <Page id="page" title="{i18n>homePageTitle}">
                <content>
                    <Panel headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button 
                            id="holaBtn" 
                            text="{i18n>showHelloButtonText}" 
                            press=".onShowHello"/>

                            <Input
                            id="InHW"
                            value="{/recipient/name}"
                            description="Hola {/recipient/name}"
                            valueLiveUpdate="true"
                            width="60%"/>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
