<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="helloDialog"
      title="Ventana de dialogo {/recipient/nombre}">
      <content>
         <core:Icon
            src="sap-icon://hello-world"
            size="2rem"
            class="sapUiMediumMargin"/>
      </content>
      <Text text="Alerta de mensaje en forma de fragmento"/>
      <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
    </Dialog>
</core:FragmentDefinition>